{% capture buttons %}
<div class="buttons">
  <a
    href="{{ github_suggest.url }}"
    class="btn"
    target="_blank"
  >
    {{ github_suggest.text }}
  </a>
  <a
    href="{{ github_view.url }}"
    class="btn"
    target="_blank"
  >
    {{ github_view.text }}
  </a>
  <a
    href="{{ twitter.url_base }}{{ twitter.message }}&amp;url=http://uxofvr.com/&amp;via=omgmog"
    class="btn"
    target="_blank"
  >
    {{ twitter.button_text }}
  </a>
</div>
{% endcapture %}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1"/>

  <!-- seo -->
  <title>{{ title_full }}</title>
  <meta name="description" content="{{ subtitle }}"/>
  <meta name="keywords" content="UX, User Experience, VR, Virtual Reality, VRUX, UXVR, VRUI, UIVR, UI, User Interface, Oculus, Oculus Rift, Google Cardboard, Google Daydream, Headset, HMD, Interaction, 3D, HTC Vive, Leap Motion, Gestures, User Experience of Virtual Reality, Max Glenister, Omgmog"/>
  <!-- opengraph -->
  <meta property="og:title" content="{{ title_full }}"/>
  <meta property="og:type" content="article"/>
  <meta property="og:url" content="{{ baseurl }}"/>
  <meta property="og:image" content="{{ baseurl }}/assets/uxvrlogo.png"/>
  <!-- twitter -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@omgmog" />
  <meta name="twitter:title" content="{{ title_full }}" />
  <meta name="twitter:description" content="{{ subtitle }}" />
  <meta name="twitter:image" content="{{ baseurl }}/assets/uxvrlogo.png" />

  <!-- everything else -->
  <link rel="apple-touch-icon" sizes="57x57" href="/assets/apple-touch-icon-57x57.png">
  <link rel="apple-touch-icon" sizes="60x60" href="/assets/apple-touch-icon-60x60.png">
  <link rel="apple-touch-icon" sizes="72x72" href="/assets/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="76x76" href="/assets/apple-touch-icon-76x76.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/assets/apple-touch-icon-114x114.png">
  <link rel="apple-touch-icon" sizes="120x120" href="/assets/apple-touch-icon-120x120.png">
  <link rel="apple-touch-icon" sizes="144x144" href="/assets/apple-touch-icon-144x144.png">
  <link rel="apple-touch-icon" sizes="152x152" href="/assets/apple-touch-icon-152x152.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon-180x180.png">
  <link rel="icon" type="image/png" href="/assets/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/assets/favicon-194x194.png" sizes="194x194">
  <link rel="icon" type="image/png" href="/assets/favicon-96x96.png" sizes="96x96">
  <link rel="icon" type="image/png" href="/assets/android-chrome-192x192.png" sizes="192x192">
  <link rel="icon" type="image/png" href="/assets/favicon-16x16.png" sizes="16x16">
  <link rel="manifest" href="/assets/manifest.json">
  <link rel="mask-icon" href="/assets/safari-pinned-tab.svg" color="#198226">
  <link rel="shortcut icon" href="/assets/favicon.ico">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="msapplication-TileImage" content="/assets/mstile-144x144.png">
  <meta name="msapplication-config" content="/assets/browserconfig.xml">
  <meta name="theme-color" content="#198226">
  <link rel="stylesheet" href="/assets/style.css">
  <link rel="canonical" href="{{ baseurl }}" />
</head>
<body>
  <aside id="top">
    <div class="inner">
      <img
        src="/assets/cardboard.svg"
        class="logo"
      >
      <h1>
        {{ title_short }}
      </h1>
      <p>
        {{ subtitle }}
      </p>
      {% for para in intro %}
        <p>{{ para }}</p>
      {% endfor %}

      {{ buttons }}
      <p class="signoff">Curated &amp; built with love by<br>
      <a href="https://omgmog.net">Max Glenister</a> (<a href="https://twitter.com/omgmog">@omgmog</a>)</p>
    </div>
  </aside>
  <nav>
    <div class="tab about">
      <a href="#top">About</a>
    </div>
    {% for section in sections %}
      <div class="tab">
        <a href="#{{ section._}}">{{ section.p }}</a>
      </div>
    {% endfor %}
  </nav>
  <main>
    <div class="inner">
      {% for section in sections %}
        <section id="{{section._}}">
          <h2>{{section.p}}</h2>
            {% for resource in resources %}
              {% if resource.tags contains section.s %}
                <article>
                  <a
                    href="{{resource.url}}"
                    target="_blank"
                    {% if resource.url contains "youtube.com" %} data-lity{% endif %}
                    {% if resource.url contains "vimeo.com" %} data-lity{% endif %}
                  >
                    <h3>
                      {{resource.title}}
                    </h3>
                    <em>{{resource.url}}</em>
                    {% if resource.author %}
                      <h4>{{resource.author}}</h4>
                    {% endif %}
                  </a>
                </article>
              {% endif %}
            {% endfor %}
        </section>
      {% endfor %}
    </div>
  </main>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.slim.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/lity/1.6.6/lity.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lity/1.6.6/lity.min.css">
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-77904215-1', 'auto');
  ga('send', 'pageview');

</script>
</body>
</html>
